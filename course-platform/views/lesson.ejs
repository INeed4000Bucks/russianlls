<!DOCTYPE html>
<html>
<head>
    <title><%- lesson.title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <h2>Contents</h2>
            <div class="keyboard-shortcuts">
                <p><strong>Keyboard Shortcuts:</strong></p>
                <ul>
                    <li>Space: Next section</li>
                    <li>P: Play/Pause</li>
                    <li>←/→: Navigate sections</li>
                    <li>A: Toggle auto-advance</li>
                    <li>R: Replay section</li>
                </ul>
            </div>
            <ul class="lesson-sections">
                <% lesson.sections.forEach((section, index) => { %>
                    <li data-section="<%= section.id %>" 
                        data-audio="<%= section.audioFile %>"
                        class="section <%= section.id === currentSection ? 'active' : '' %>">
                        <span class="section-title"><%= section.title %></span>
                    </li>
                <% }); %>
            </ul>
        </div>
        
        <div class="main-content">
            <h1><%- lesson.title %></h1>
            <div id="audio-player">
                <audio id="current-audio" src=""></audio>
                <div class="controls">
                    <button id="play-pause">Play</button>
                    <label class="auto-advance-toggle">
                        <input type="checkbox" id="auto-advance-checkbox">
                        <span class="toggle-label">Auto-advance ✓</span>
                    </label>
                    <div class="progress-bar">
                        <div class="progress"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .keyboard-shortcuts {
            margin: 20px 0;
            padding: 10px;
            background: #f5f5f5;
            border-radius: 4px;
            font-size: 0.9em;
        }

        .keyboard-shortcuts ul {
            padding-left: 20px;
            margin: 5px 0;
        }

        .section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .auto-advance-toggle {
            display: flex;
            align-items: center;
            margin-left: 15px;
            cursor: pointer;
        }

        .toggle-label {
            margin-left: 5px;
            color: #4CAF50;
        }

        .controls {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
    </style>

    <script>
        const lessonId = '<%= lessonId %>';
        const currentSection = '<%= currentSection %>';
    </script>
    <script src="/js/player.js"></script>
</body>
</html>